{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./public/dist/",
    "paths": {
      "@components/*": ["js/components/*"],
      "lib/*": ["lib/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6"
  }
}
